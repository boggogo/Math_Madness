<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:foobar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backrepeat"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="koemdzhiev.com.mathmadness.GameOverActivity">

    <com.ctrlplusz.anytextview.AnyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: 23"
        android:textColor="@android:color/white"
        android:id="@+id/score"
        foobar:typeface="JungleFeverNF.otf"
        android:layout_above="@+id/goToHome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"/>


    <com.ctrlplusz.anytextview.AnyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You are wrong!"
        android:textColor="@android:color/white"
        android:id="@+id/userIsWrontTextView"
        foobar:typeface="JungleFeverNF.otf"
        android:layout_above="@+id/score"
        android:layout_centerHorizontal="true"/>

    <com.ctrlplusz.anytextview.AnyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="result"
        android:id="@+id/mathEquasion"
        android:textColor="@android:color/white"
        foobar:typeface="JungleFeverNF.otf"
        android:layout_above="@+id/userIsWrontTextView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/playAgainBtn"
        android:src="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/mathEquasion"
        android:layout_toStartOf="@+id/mathEquasion"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/goToHome"
        android:src="@drawable/home_icon"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/playAgainBtn"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@drawable/advanced"
        android:id="@+id/playAdvancedAgainBtn"
        android:layout_alignTop="@+id/playAgainBtn"
        android:layout_toRightOf="@+id/mathEquasion"
        android:layout_toEndOf="@+id/mathEquasion"/>


</RelativeLayout>
