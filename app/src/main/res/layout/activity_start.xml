<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backrepeat"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="koemdzhiev.com.mathmadness.StartActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/startGameView"
        android:src="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startGameView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp">
        <!-- show achievements -->
        <Button
            android:id="@+id/show_achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements"/>

        <!-- show leaderboards -->
        <Button
            android:id="@+id/show_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_alignBottom="@+id/startGameView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- sign-in button -->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"/>

        <!-- sign-out button -->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:visibility="gone"
            android:layout_weight="50"/>
    </LinearLayout>
</RelativeLayout>
